*
	padding 0
	margin 0
	outline none
	font-family "Work Sans"
	// background-image linear-gradient(45deg, #FA8BFF 0%, #2BFF88 100%)

button
	background-color #FA8BFF
	border 1px solid #FA8BFF
	padding 10px 35px
	border-radius 5px
	color white
	margin 1rem 0 0 0
	cursor pointer

#error 
	opacity 0

.login-outer
	margin 0 2rem

#login 
	display flex
	width 100%
	height 100vh
	justify-content center
	align-items center
	form
		width 60vh
		#logo
			display flex
			align-items center
			#header
				font-weight 400
				color #545454
				font-size 35pt
				padding-left 10px
				border-left 2px solid #a0a0a0
			img
				width 50px
				padding-right 10px
				text-align center
		input
			padding 8px 0
			width 100%
			border none
		#password-div
			border-bottom 1px solid #a0a0a0
			width 100%
			#password
				width 70%
			#forgot
				color #a0a0a0
				font-size 13.3333px
				padding 8px 0
				cursor pointer
		#email, input[type=text]
			border-bottom 1px solid #a0a0a0
			&:focus
				border-bottom 1px solid #FA8BFF
		#name
			margin 20px 0 5px 0
			text-transform uppercase
			letter-spacing .8px
			font-size 12px
			color #a0a0a0
		#error, #sent
			color red
			margin-top 1rem
			opacity 0
	#forgotSubmit
		display none
		width 60vh

.grid
	display flex
	.col
		flex 1

#loggedin 
	display none
	input[readonly]
		padding 8px 0
		width 100%
		border none
	.edit, .stats, .delete
		flex 1
		margin 5px
		padding 10px 35px
		border-radius 5px
		border 1px solid #FA8BFF
		background #FA8BFF
	#new
		width 100%
	#current
		flex 2
		margin 0 0.5rem 0 0.5rem
		overflow-y scroll
		overflow-x hidden
		height 100vh
		.url
			display flex
			flex-flow row wrap
			border-bottom 1px solid #a0a0a0
			padding 1rem 0 1rem 0
			cursor pointer
			h1
				font-weight 600
				cursor pointer
			.shortURL
				font-size 2rem
				font-weight 400
				padding 0
				flex 8
				overflow hidden
				text-overflow ellipsis
				padding 0 0 0 5px
				cursor pointer
			input
				padding 0
				cursor pointer
			.platform
				padding 0 0 5px 5px
				cursor pointer
			.longURL
				padding 0 0 5px 5px
				overflow hidden
				text-overflow ellipsis
			div
				flex 2
				p
					font-size 13.3333px
				.hits
					font-size 1.7rem
					text-align right
					overflow hidden
					text-overflow ellipsis
					margin 0 5px 0 0
				.mobile
					flex 1
					font-size 16px
				.desktop
					flex 1
					font-size 16px
				.clicks
					height 20px
					width 100%
					font-size 12px
					text-transform uppercase
					text-align right
	#visualization
		flex 6
		margin 0 0 0 2rem
		overflow-y scroll
		overflow-x hidden
		height 100vh

#loader 
	display flex
	flex-flow wrap column
	justify-content center
	align-items center
	position absolute
	width 100%
	height 100vh
	overflow hidden
	background-color white
	img
		width 58.938px

#dot
	display inline-block
	width 10px
	height 10px
	margin 0 3px
	background #FA8BFF
	border-radius 50%
	transform translateY(0)
	animation wave 2s infinite ease-in-out

	@keyframes wave
		0%, 60%, 100%
			transform translateY(0)
			-moz-transform translateY(0)
		20%
			transform translateY(13px)
		40%
			transform translateY(-13px)

#dot:nth-child(1)
	animation-delay 0s

#dot:nth-child(2)
	animation-delay 0.1s

#dot:nth-child(3)
	animation-delay 0.2s

@media (max-width: 443px)
	#password-div
		#password
			width 63% !important

@media (max-width: 373px)
	#password-div
		#password
			width 55% !important